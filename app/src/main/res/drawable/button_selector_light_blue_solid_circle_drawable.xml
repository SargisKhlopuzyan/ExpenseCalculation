<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="false"
        android:drawable="@color/colorDisabled" />
    <item
        android:state_pressed="true"
        android:state_enabled="true"
        android:drawable="@drawable/light_orange_solid_circle_drawable" />
    <item
        android:state_focused="true"
        android:state_enabled="true"
        android:drawable="@drawable/light_blue_solid_circle_drawable" />
    <item
        android:state_enabled="true"
        android:drawable="@drawable/light_blue_solid_circle_drawable" />
</selector>
    <!-- Example of use: android:background="@drawable/button_selector" -->